@{
    ViewData["Title"] = "Home Page";
}
@model CRM_web.Models.Users


<div id="container">
    <section id="content">
        <article class="article">
            <form asp-controller="Usuarios" asp-action="Index" >
                <div class="form-group">
                    <label asp-for="LoginName">Ingrese su nombre de usuario o correo:</label>
                    <input type="text" asp-for="LoginName" class="form-control">
                    <span> @ViewData["Message"]</span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Ingrese su contraseña:</label>
                    <input type="password" asp-for="Password" class="form-control">
                    <span> @ViewData["Message2"]</span>
                </div>
                <a asp-area="" asp-controller="Usuarios" asp-action="Create">
                    <p class="session">He olvidado mi contraseña</p>
                </a>
                <br>
                <div class="boton">
                    <button type="submit" name="btn-signup" class="btn btn-primary btn-lg">Iniciar Sesión</button>
                    <br>
                    <br>
                    ¿no tienes una cuenta?
                    <a asp-area="" asp-controller="Usuarios" asp-action="Create">
                        <p class="session">Crear cuenta nueva</p>
                    </a>

                </div>
            </form>
        </article>
    </section>

    <p class="SocialLogin">
        <i class='bx bxl-github'> </i> kevinjulian12

    </p>
</div>
<footer class="copyright">
    <i class='bx bxs-copyright' undefined></i>Copyright2020
</footer>


