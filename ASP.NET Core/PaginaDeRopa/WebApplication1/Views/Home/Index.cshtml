@{
    ViewData["Title"] = "Home Page";
}

<main>
    <section class="contenedor" id="expertos">
        <h2 class="subtitulo">Categoria</h2>
        <section class="experts">
            <div class="cont-expert">
                <img src="~/images/ropa6.jpg" alt="">
                <h3 class="n-expert">Ropa de Mujer</h3>
            </div>
            <div class="cont-expert">
                <img src="~/images/hombre2.jpg" alt="">
                <h3 class="n-expert">Ropa de Hombre</h3>
            </div>
            <div class="cont-expert">
                <img src="~/images/niños.jpg" alt="">
                <h3 class="n-expert">Ropa de Niños</h3>
            </div>
        </section>
    </section>
    <section class="Galleria" id="Galleria">
        <div class="contenedor">
            <h2 class="subtitulo">Promociones</h2>
            <div class="Contenedor-galeria">
                <img src="~/images/ropa1.jpg" alt="" class="img-galeria">
                <img src="~/images/ropa2.jpg" alt="" class="img-galeria">
                <img src="~/images/ropa3.jpg" alt="" class="img-galeria">
                <img src="~/images/ropa4.jpg" alt="" class="img-galeria">
                <img src="~/images/ropa5.jpg" alt="" class="img-galeria">
                <img src="~/images/ropa6.jpg" alt="" class="img-galeria">
            </div>
        </div>
    </section>
    <section class="imagen-light">
        <img src="~/images/bx-x.svg" alt="" class="close">
        <img src="~/images/figuras-geometricas-de-colores-abstractas_2560x1440_xtrafondos.com.jpg" alt="" class="agregar-imagen">
    </section>
    <section class="contenedor" id="servicio">
        <h2 class="subtitulo">Nuestro Servicio</h2>
        <div class="contenedor-servicio">
            <img src="~/images/focused_working.svg" alt="">
            <div class="checklist-servicio">
                <div class="service">
                    <h3 class="n-service"><span class="number">1</span>Localidades</h3>
                    <p>Solo realizamos envios en la zona del partido de Almirante Brown Y Guernica.</p>
                </div>
                <div class="service">
                    <h3 class="n-service"><span class="number">2</span>Formas de envios</h3>
                    <p>Se realiza envios a domicilio, por medio del correo argentino o en forma personal.</p>
                </div>
                <div class="service">
                    <h3 class="n-service"><span class="number">3</span>Medios de pagos</h3>
                    <p>Aceptamos mercadoPago y si la forma de envio es personal ,podes pagar en efectivo a la llegada de tu producto.</p>
                </div>
            </div>
        </div>
    </section>
</main>


